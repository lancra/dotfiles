{
  "$schema": "https://raw.githubusercontent.com/lancra/dotfiles/main/.config/powershell/aliases.schema.json",
  "g": {
    "group": "Application",
    "command": "git",
    "bash": false
  },
  "eev": {
    "group": "Environment",
    "command": "$env:HOME/.local/bin/env/export-variables.ps1",
    "bash": false
  },
  "iev": {
    "group": "Environment",
    "command": "$env:HOME/.local/bin/env/import-variables.ps1",
    "bash": false
  },
  "riev": {
    "group": "Environment",
    "command": "git restore */env/variables.yaml && iev",
    "bash": true
  },
  "cdu": {
    "group": "FileSystem",
    "command": "change-directory-up.ps1 -Count #{0}",
    "bash": true
  },
  "cwd": {
    "group": "FileSystem",
    "command": "$pwd.Path | Set-Clipboard",
    "bash": true
  },
  "l": {
    "group": "FileSystem",
    "command": "lsd --long #{:*}",
    "bash": true
  },
  "lt": {
    "group": "FileSystem",
    "command": "lsd --long --tree --depth #{0} #{:*}",
    "bash": true
  },
  "rmr": {
    "group": "FileSystem",
    "command": "Remove-Item -Path #{0} -Recurse",
    "bash": true
  },
  "jqf": {
    "group": "JSON",
    "command": "Set-Content -Path \"$(#{0})\" -Value (jq '.' \"$(#{0})\")",
    "bash": true
  },
  "pm": {
    "group": "Podman",
    "command": "podman #{:*}",
    "bash": true
  },
  "hp": {
    "group": "PowerShell",
    "command": "$env:HOME/.local/bin/get-extended-help.ps1",
    "bash": false
  },
  "cs": {
    "group": "Software",
    "command": "$env:HOME/.local/bin/software/check-software.ps1",
    "bash": false
  },
  "es": {
    "group": "Software",
    "command": "$env:HOME/.local/bin/software/export-software.ps1",
    "bash": false
  },
  "is": {
    "group": "Software",
    "command": "$env:HOME/.local/bin/software/install-software.ps1",
    "bash": false
  },
  "wu": {
    "group": "WinGet",
    "command": "winget upgrade #{:*}",
    "bash": true
  }
}
