{
  "$schema": "https://raw.githubusercontent.com/lancra/dotfiles/main/.config/powershell/aliases.schema.json",
  "nugetp": {
    "group": ".NET",
    "command": "$env:HOME/.local/bin/get-latest-nuget-package.ps1",
    "bash": false
  },
  "c": {
    "group": "Application",
    "command": "cargo",
    "bash": false
  },
  "d": {
    "group": "Application",
    "command": "dotnet",
    "bash": false
  },
  "g": {
    "group": "Application",
    "command": "git",
    "bash": false
  },
  "ru": {
    "group": "Application",
    "command": "rustup",
    "bash": false
  },
  "eev": {
    "group": "Environment",
    "command": "$env:HOME/.local/bin/env/export-variables.ps1",
    "bash": false
  },
  "iev": {
    "group": "Environment",
    "command": "$env:HOME/.local/bin/env/import-variables.ps1",
    "bash": false
  },
  "rev": {
    "group": "Environment",
    "command": "$env:HOME/.local/bin/env/remove-variable.ps1",
    "bash": false
  },
  "riev": {
    "group": "Environment",
    "command": "git restore */env/variables.yaml && iev -Force",
    "bash": true
  },
  "cdr": {
    "group": "FileSystem",
    "command": "$env:HOME/.local/bin/change-directory-repository-root.ps1",
    "bash": false
  },
  "cdu": {
    "group": "FileSystem",
    "command": "$env:HOME/.local/bin/change-directory-up.ps1",
    "bash": false
  },
  "cwd": {
    "group": "FileSystem",
    "command": "$pwd.Path | Set-Clipboard",
    "bash": true
  },
  "l": {
    "group": "FileSystem",
    "command": "lsd --long #{:*}",
    "bash": true
  },
  "lt": {
    "group": "FileSystem",
    "command": "lsd --long --tree --depth #{0} #{:*}",
    "bash": true
  },
  "rmr": {
    "group": "FileSystem",
    "command": "Remove-Item -Path #{0} -Recurse -Force",
    "bash": true
  },
  "ga": {
    "group": "Git",
    "command": "$env:HOME/.local/bin/git/generate-aliases.ps1",
    "bash": false
  },
  "gpnf": {
    "group": "Git",
    "command": "$env:HOME/.local/bin/git/prune-orphan-notes.ps1",
    "bash": false
  },
  "gpnn": {
    "group": "Git",
    "command": "& $env:HOME/.local/bin/git/prune-orphan-notes.ps1 -Check",
    "bash": true
  },
  "ghc": {
    "group": "GitHub",
    "command": "$env:HOME/.local/bin/github/open-commit.ps1",
    "bash": false
  },
  "ghi": {
    "group": "GitHub",
    "command": "$env:HOME/.local/bin/github/open-issue.ps1",
    "bash": false
  },
  "jqf": {
    "group": "JSON",
    "command": "Set-Content -Path \"$(#{0})\" -Value (jq '.' \"$(#{0})\")",
    "bash": true
  },
  "pm": {
    "group": "Podman",
    "command": "podman #{:*}",
    "bash": true
  },
  "pmmr": {
    "group": "Podman",
    "command": "podman machine stop && podman machine start",
    "bash": true
  },
  "hp": {
    "group": "PowerShell",
    "command": "$env:HOME/.local/bin/get-extended-help.ps1",
    "bash": false
  },
  "mano": {
    "group": "PowerShell",
    "command": "$env:HOME/.local/bin/open-online-help.ps1",
    "bash": false
  },
  "ml": {
    "group": "Programming",
    "command": "podman run --platform 'linux/amd64' --rm --volume \"${PWD}:/tmp/lint:rw\" 'oxsecurity/megalinter-dotnet:v8'",
    "bash": true
  },
  "mla": {
    "group": "Programming",
    "command": "podman run --platform 'linux/amd64' --rm --volume \"${PWD}:/tmp/lint:rw\" --env 'APPLY_FIXES=all' 'oxsecurity/megalinter-dotnet:v8'",
    "bash": true
  },
  "swc": {
    "group": "Software",
    "command": "$env:HOME/.local/bin/software/check-software.ps1",
    "bash": false
  },
  "swe": {
    "group": "Software",
    "command": "$env:HOME/.local/bin/software/export-software.ps1",
    "bash": false
  },
  "swi": {
    "group": "Software",
    "command": "$env:HOME/.local/bin/software/install-software.ps1",
    "bash": false
  },
  "sln": {
    "group": "Visual Studio",
    "command": "$env:HOME/.local/bin/vs/open-solution.ps1",
    "bash": false
  },
  "codeg": {
    "group": "Visual Studio Code",
    "command": "Get-ChildItem -Path #{0} | ForEach-Object { code $_ }",
    "bash": true
  },
  "wu": {
    "group": "WinGet",
    "command": "winget upgrade #{:*}",
    "bash": true
  }
}
