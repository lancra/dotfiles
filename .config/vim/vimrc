set nocompatible
set termguicolors

set directory=$XDG_CONFIG_HOME/vim/.swap,~/AppData/Local/Temp,c:/tmp,c:/temp
set backupdir=$XDG_CONFIG_HOME/vim/.backup,~/AppData/Local/Temp,c:/tmp,c:/temp
set undodir=$XDG_CONFIG_HOME/vim/.undo
set viminfo+=n$XDG_CONFIG_HOME/vim/viminfo

call plug#begin()
Plug 'catppuccin/vim', { 'as': 'catppuccin' }
Plug 'vim-airline/vim-airline'
call plug#end()

colorscheme catppuccin_mocha

filetype on
filetype indent on
filetype plugin on

set autoindent
set hlsearch
set ignorecase
set incsearch
set noshowmode
set number
set smartcase
set wildmenu

" Disable audible and visual bells.
set visualbell
set t_vb=

syntax on
