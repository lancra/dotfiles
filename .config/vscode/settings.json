{
  "[git-commit]": {
    "editor.rulers": [
      {
        "color": "#D14341",
        "column": 50
      },
      {
        "color": "#C7C7C7",
        "column": 72
      }
    ],
    "rewrap.autoWrap.enabled": true,
    "rewrap.wrappingColumn": 72
  },
  "[csharp]": {
    "editor.tabSize": 4
  },
  "[csv][dynamic csv][tsv][csv (semicolon)]": {
    "editor.stickyScroll.enabled": true
  },
  "[html][javascript][markdown][scss][typescript][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[powershell]": {
    "editor.rulers": [
      {
        "color": "#6A9955",
        "column": 80
      },
      {
        "color": "#FF8080",
        "column": 135
      }
    ],
    "editor.tabSize": 4
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true,
    "editor.rulers": [
      {
        "color": "#FF8080",
        "column": 100
      }
    ],
    "editor.tabSize": 4
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml",
    "editor.formatOnSave": true
  },
  "colorize.enable_search_variables": false,
  "colorize.languages": [
    "css",
    "json",
    "jsonc",
    "less",
    "postcss",
    "sass",
    "scss",
    "sss",
    "stylus",
    "svg",
    "xml"
  ],
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    {
      "color": "#FF8080",
      "column": 135
    }
  ],
  "editor.tabSize": 2,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "files.associations": {
    "*.snippet.json": "snippets",
    "*.sqlfluff": "ini"
  },
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "json.schemas": [
    {
      "fileMatch": [
        "**/*.snippet.json"
      ],
      "url": "https://raw.githubusercontent.com/lancra/dotfiles/main/.config/snippets/snippet.schema.json"
    }
  ],
  "json.validate.enable": true,
  "markdownlint.config": {
    "default": true,
    "heading-style": {
      "style": "atx"
    },
    "line-length": {
      "line_length": 135
    },
    "no-duplicate-heading": {
      "siblings_only": true
    }
  },
  "notebook.lineNumbers": "on",
  "omnisharp.organizeImportsOnFormat": true,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.powerShellDefaultVersion": "PowerShell (x64)",
  "search.useIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "CaskaydiaCove NF Mono",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "white",
      "backgroundColor": "blue"
    },
    {
      "text": "FIXME:",
      "color": "white",
      "backgroundColor": "red"
    },
    {
      "text": "HACK:",
      "color": "black",
      "backgroundColor": "yellow"
    }
  ],
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "xml.server.workDir": "~/.config/lemminx"
}
