{
  "$schema": "vscode://schemas/settings/user",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "markdownlint.config": {
    "default": true,
    "heading-style": {
      "style": "atx",
    },
    "line-length": {
      "line_length": 135,
    },
    "no-duplicate-heading": {
      "siblings_only": true,
    }
  },
}
